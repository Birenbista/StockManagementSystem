@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            console.log("ready!");
            alert("ready");
        });

    </script>
    <script>
        function changeDetails(id) {
            var ID = id.value;
            $.ajax({
                url: "/Sales/CustomerSales",
                type: "GET",
                data: { "ProductID": ID }
            });


        }
    </script>
}

