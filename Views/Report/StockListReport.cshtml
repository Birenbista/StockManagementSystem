@model IEnumerable<SMS.ViewModel.ProductStockViewModel>

@{
    ViewData["Title"] = "Stock Report";
}

<h1>Stock Report</h1>

<form asp-action="StockListReport" method="GET" style="width:500px">
    <div class="row input-group">
        <input type="text" name="productname"   class="form-control"/>
        <div class="input-group-btn" style="padding-left:20px">
            @*<button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Search</button>*@
            <input type="submit" value="Search" class="btn-outline-secondary"  style="height:40px; border-radius:3px; width:100px;"/>
        </div>
    </div>
</form>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)

            </th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a href="/Products/Details/@item.ProductId">View Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>

